
{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2017",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"skipLibCheck": true,
		"strict": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
